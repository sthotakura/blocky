<mah:MetroWindow x:Class="Blocky.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:views="clr-namespace:Blocky.Views"
                 mc:Ignorable="d"
                 WindowStartupLocation="CenterScreen"
                 Title="Blocky" d:DesignHeight="600" d:DesignWidth="800">
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Command="{Binding ToggleProxyCommand}">
                <iconPacks:PackIconModern>
                    <iconPacks:PackIconModern.Style>
                        <Style TargetType="{x:Type iconPacks:PackIconModern}">
                            <Setter Property="Kind" Value="ControlPlay" />
                            <Setter Property="ToolTip" Value="Start" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                    <Setter Property="Kind" Value="ControlStop" />
                                    <Setter Property="ToolTip" Value="Stop" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </iconPacks:PackIconModern.Style>
                </iconPacks:PackIconModern>
            </Button>
            <Button Command="{Binding AddRuleCommand}" ToolTip="Add Rule">
                <iconPacks:PackIconModern Kind="Add" />
            </Button>
            <Button Command="{Binding ToggleSettingsCommand}" ToolTip="Open Settings">
                <iconPacks:PackIconModern Kind="Settings" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout Header="Settings" Position="Right" Width="250" IsOpen="{Binding SettingsViewOpen}" Theme="Inverse">
                <views:SettingsView DataContext="{Binding SettingsViewModel}"/>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0"
                  Margin="10"
                  ItemsSource="{Binding Rules}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Domain"
                                    Binding="{Binding Domain}"
                                    Width="*" />
                <DataGridCheckBoxColumn Header="Enabled"
                                        Binding="{Binding IsEnabled}"
                                        Width="Auto" />
                <DataGridCheckBoxColumn Header="Time Restricted"
                                        Binding="{Binding HasTimeRestriction}"
                                        Width="Auto" />
                <DataGridTemplateColumn Header="Actions" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Remove"
                                    Command="{Binding DataContext.RemoveRuleCommand, 
                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="1">
            <TextBlock
                Text="{Binding IsRunning, 
                       Converter={StaticResource BoolToStatusConverter}}" />
        </StatusBar>
    </Grid>
</mah:MetroWindow>